<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.younkyu.firebasechat.GaipActivity">

    <EditText
        android:id="@+id/etID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="id"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/etID"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/etID"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/etID"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/etPassCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="passwordDDo"
        android:inputType="textPersonName"
        android:layout_marginTop="-6dp"
        app:layout_constraintTop_toBottomOf="@+id/etPass"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/etPass"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/etPass"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/btngaip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="가입"
        app:layout_constraintLeft_toLeftOf="@+id/etPassCon"
        app:layout_constraintRight_toRightOf="@+id/etPassCon"
        app:layout_constraintTop_toBottomOf="@+id/etPassCon" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/etPassCon"
        app:layout_constraintTop_toBottomOf="@+id/btngaip" />

</android.support.constraint.ConstraintLayout>
